// tabs

#shopify-section-tabs-section {
  position:relative;
  padding-top: 100px;
  padding-bottom: 100px;
  background-color: #F7EDE3;
  z-index: 0;
  .nav-tabs {
    border: none;
    margin: 0;
  }
  .active {
    background-color: white !important;
  }
  .active > a {
    color: black !important;
    font-weight: 800;
  }

  .nav-tabs>li {
      float: left;
      margin-bottom: -1px;
      width: 300px;
      text-align: center;
      background-color: #E3C3A2;
      border-bottom: 2px solid white;
      a {
        border: none !important;
        border-radius: 0px;
        color: white;
        font-size: 16px;
      }
  }
  .tab_content {
    background-color: white;
    text-align: center;
    padding: 50px;
    width: 72%;
    margin: 0 auto;
  }
}
// exemples de r√©alisations

#CollectionSection-page-featured-collection {
  .grid-product__meta {
    display:none;
  }
  .overlay {
    position:absolute;
    top:0;
    left:0;
    right:0;
    bottom:0;
    width: 100%;
    height: 100;
    background-color: #21537A;
    opacity:0;

  }
  .overlay_content {
    opacity: 0;
    color: white;
    text-transform: uppercase;
    text-align: center;
    position:absolute;
    top: 41%;
    left: 40%;
    font-size: 16px;
    font-weight: 800;
  }
  .image-wrap:hover .overlay {
    opacity: 0.6;
    transition: .5s ease;
  }
  .image-wrap:hover .overlay_content {
    opacity: 1;
    transition: .5s ease;
    img {
      margin: 0 auto;
      opacity: 1;
    }
  }
}

// product

.variant-wrapper {
  width: 100%;
  select {
    width: 100%;
  }
}

