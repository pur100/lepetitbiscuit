      white-space: nowrap;
      text-align: center;
    }

    .border_container2 {
      height: 77px;
      width: 100%;
      margin-left: 80px;
      .border2 {
        margin-top: 1px;
        height: 40px;
        border-bottom: 2px solid #E72F29;
      }
    }
    .border_container1 {
      height: 77px;
      width: 100%;
      margin-right: 80px;
      .border1 {
        height: 40px;
        border-bottom: 2px solid #21537A;

      }
    }
