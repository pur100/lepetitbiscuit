}

.flex-center {
  display: flex;
  justify-content: space-around;
}

.flex-vertical-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

// HEADER

  .site-header-sticky {
    height: 108px !important;
  }
  .site-nav {
    a[href="/products/biscuits-a-personnaliser"] {
    color: red;
    font-weight: bold;
    }

    .cart-link__bubble--visible {

    right: 10px;
    }
